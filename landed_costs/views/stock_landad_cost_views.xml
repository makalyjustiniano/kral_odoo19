<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_landed_inherit_cost_form" model="ir.ui.view">
            <field name="name">stock.landed.cost.inherit.form</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_ids']" position="replace">
                    <field name="picking_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('company_id', '=', company_id), ('state', '!=', 'draft')]" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>