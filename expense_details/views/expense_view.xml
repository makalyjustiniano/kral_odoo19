<odoo>
    <data>
        <record id="view_expense_form_inherit" model="ir.ui.view">
            <field name="name">expense.expense.form.inherit</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution']" position="replace">
                    <field name="analytic_distribution" widget="analytic_distribution" invisible="1"/>
                    <field name="kral_product_tmpl_id"  />
                    <field name="kral_distribution_analytic" widget="kral_analytic_distribution" />
                    <field name="kral_is_partner"/>
                    <field name="kral_expense_partner_id" invisible="kral_is_partner"/>
                    <field name="kral_expense_partner_text" invisible="not kral_is_partner"/>
                    <field name="kral_tag" />
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page name="lines" string="LÃ­neas">
                        <group name="name" >
                         <field name="kral_descount_lines" mode="list,kanban" nolabel="1"  class="oe_no_label">
                                <list editable="bottom" default_order="id" nolabel="1">
                                    <field name="kral_expenses_id" 
                                    domain="[('can_be_expensed', '=', True),('type', '=', 'service')]"
                                     />
                                    <field name="kral_amount"  />
                                </list>
                            </field>
                            
                        </group>
                           
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>