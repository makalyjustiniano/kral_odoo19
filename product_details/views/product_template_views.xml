<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Herencia de la vista formulario -->
        <record id="view_product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Detalles Adicionales" name="custom_details" invisible="purchase_ok == True">
                        <group string="Detalles Adicionales">
                            <group>
                                <field name="flex_code"/>
                                <field name="brand"/>
                                <field name ="product_line_product" widget="many2one_tags"/>
                                <field name ="product_line_group" widget="many2one_tags"/>
                                <field name="senasag_name"></field>
                                <field name="limit_discount_percentage" invisible="purchase_ok == True" />
                                <field name="capacidad_almacenamiento"/>
                                <field name="modo_conservacion"/>
                                <field name="procedencia"/>
                                <field name="vida_util" string="Vida útil (días)"/>
                                <field name="detalles_mataterias_primas" invisible="1"/>
                            </group>
                            <group string="Medidas y Pesos">
                                <field name="net_weight"/>
                                <field name="net_volume"/>
                                <field name="gross_weight"/>
                                <field name="gross_volume"/>
                            </group>
                            <group string="SIAT HOLOGACIÓN" invisible="sale_ok != True">
                                <field name="unidad_medida_siat"/>
                                <field name="description_unidad_medida_siat"/>
                            </group>
                        </group>
                        <group string="Tablas de Fichas Técnicas" invisible="purchase_ok == True">
                            <group name="ingredients" string="ingredientes" >
                                <field name="ingredients"   />
                            </group>
                            <group name="ingredientes_and_additives" string="Aditivos" >
                                <field name="additives_ids" nolabel="1"  >
                                    <list editable="bottom">
                                        <field name="additive_name_id" />
                                        <field name="code"/>
                                        <field name="description" optional="hidden"/>
                                        <field name="weight" />
                                    </list>
                                </field>
                            </group>
                            <group name="consumption_table" string="Consumo">
                                <field name="form_consumption"/>
                                <field name="intented_use"/>
                                <field name="intented_no_use" />
                                <field name="destination"/>
                            </group>
                            <group string="Propiedades Organolépticas" invisible="purchase_ok == True">
                                <field name="aspect"/>
                                <field name="color_custom"/>
                                <field name="flavor"/>
                                <field name="scent"/>
                            </group>
                            <group string="Propiedades Físico-Químicas" invisible="purchase_ok == True">
                                <field name="physical_chemical_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="physical_chemical_name_id"/>
                                        <field name="method"/>
                                        <field name="min"/>
                                        <field name="max"/>
                                        <field name="unit"/>
                                    </list>
                                </field>
                            </group>
                            <group string="Datos Microbiológicos" invisible="purchase_ok == True">
                                <field name="microbiological_ids" nolabel="1"  >
                                    <list editable="bottom">
                                        <field name="microbiological_name_id"/>
                                        <field name="limit_permitted_n"/>
                                        <field name="limit_permitted_c"/>
                                        <field name="limit_permitted_m_ufc_g"/>
                                        <field name="limit_permitted_m"/>
                                    </list>
                                </field>
                            </group>
                            <group string="Información Nutricional Detallada" invisible="purchase_ok == True">
                                <field name="nutritional_info" nolabel="1" >
                                    <list editable="bottom">
                                        <field name="nutricional_name_id"/>
                                        <field name="by_g" />
                                        <field name="by_ration"/>
                                        <field name="por_ration_percentage" />
                                    </list>
                                </field>
                            </group>
                            <group string="Notas de Información Nutricional" invisible="purchase_ok == True">
                                <field name="nutricional_notes"  />
                            </group>

                            
                        </group>
                    </page>
                    <page name="alegens" string="Alérgenos" invisible="purchase_ok == True">

                                <field name="alergenos_ids" nolabel="1" >
                                    <list editable="bottom">

                                        <field name="allergen_id"/>
                                        <field name="anser_value_no" />
                                        <field name="anser_value_yes" />
                                        <field name="puede_contener" />
                                        <field name="especificar_producto" />      
                                                                          
                                    </list>
                                </field>
                        
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>