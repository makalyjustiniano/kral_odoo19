<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View (Tree se llama List en Odoo 19) -->
        <record id="view_config_change_log_list" model="ir.ui.view">
            <field name="name">config.change.log.list</field>
            <field name="model">config.change.log</field>
            <field name="arch" type="xml">
                <list>
                    <field name="change_date"/>
                    <field name="user_id"/>
                    <field name="config_module"/>
                    <field name="field_name"/>
                    <field name="new_value"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_config_change_log_form" model="ir.ui.view">
            <field name="name">config.change.log.form</field>
            <field name="model">config.change.log</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_view_changes" type="object" string="Ver Detalles" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="change_date" readonly="1"/>
                                <field name="config_module" readonly="1"/>
                            </group>
                            <group>
                                <field name="field_name" readonly="1"/>
                            </group>
                        </group>
                        <group string="Valores">
                           
                            <group string="Valor">
                                <field name="new_value" readonly="1" nolabel="1"/>
                            </group>
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>

    
        <!-- Action -->
        <record id="action_config_change_log" model="ir.actions.act_window">
            <field name="name">Historial de Configuraciones</field>
            <field name="res_model">config.change.log</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_config_change_log_root" 
                  name="Auditoría" 
                  sequence="100"
                  groups="base.group_system"/>
                  
        <menuitem id="menu_config_change_log" 
                  name="Cambios de Configuración" 
                  parent="menu_config_change_log_root" 
                  action="action_config_change_log" 
                  sequence="10"
                  groups="base.group_system"/>
    </data>
</odoo>