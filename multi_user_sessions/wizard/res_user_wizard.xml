<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_res_user_wizard" model="ir.actions.act_window">
            <field name="name">Asistente multi usuario</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.user.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer sesion multi usuario
                </p>
            </field>
        </record>

            
        <record id="view_res_user_wizard_form" model="ir.ui.view">
            <field name="name">res.user.wizard.form</field>
            <field name="model">res.user.wizard</field>
            <field name="arch" type="xml">
                <form duplicate="false" create='false' delete='false' >
                    <header>
                        <!-- <button name='register_session' type="object"  string="Registrar sesion" class="btn-primary"/>
                        <button name='close' type="object"  string="Cancelar" class="btn-secondary" confirm="¿Continuar con el usuario de inicio de session?" />
                         -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" options="{ 'no_open': True, 'no_create': True}" required='success == False' />    
                                <!-- <field name="reference"  />
                                <field name="note"/> -->
                            </group>
                            <group>
                                
                                <field name="user_id" />
                                <field name="success" />
                                
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button name='register_session' type="object"  string="Registrar sesion" class="btn-primary"/>
                        <button name='close' type="object"  string="Cancelar" class="btn-secondary" confirm="¿Continuar con el usuario de inicio de session?" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- 
        <record id="multi_user_automatic_entry_wizard_action" model="ir.actions.act_window">
            <field name="name">Seleccionar usuario multi sesion</field>
            <field name="res_model">res.user.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> 
        </record>
        -->

    </data>
</odoo>
